<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <% if (message.length > 0) { %>
              <p style="color: #fa0000;text-align: center;"><%= message %></p>
            <% } %>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="social-card">
          <a class="btn social-btn btn-light" href="/auth/google" role="button"><i class="fa-brands fa-google" style="color: #fa0000;"></i> Login with Google</a>
        </div>
        <div class="social-card">
          <a class="btn social-btn btn-light" href="/auth/facebook" role="button"><i class="fa-brands fa-facebook-f" style="color: #005eff;"></i> Login with Facebook</a>
        </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
